<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request an Event</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <div class="container my-5">
        <h1 class="mb-4 text-center">Please Fill Out This Form to Create a New Event</h1>
        <form action="/addEvent" method="POST" class="needs-validation" novalidate>
            <!-- Event Organizer Email -->
            <div class="mb-3">
                <label for="d_email" class="form-label">Your Email Address</label>
                <input 
                    type="email" 
                    id="d_email" 
                    name="d_email" 
                    class="form-control" 
                    placeholder="e.g., yourname@example.com" 
                    aria-label="Email Address"
                    required>
            </div>

            <!-- Event Organizer Phone Number -->
            <div class="mb-3">
                <label for="d_phone_number" class="form-label">Your Phone Number</label>
                <input 
                    type="tel" 
                    id="d_phone_number" 
                    name="d_phone_number" 
                    class="form-control"
                    placeholder="e.g., 123-456-7890" 
                    aria-label="Phone Number"
                    pattern="^\d{3}[-]\d{3}[-]\d{4}$" 
                    maxlength="12" 
                    required>
            </div>

            <!-- Event Name -->
            <div class="mb-3">
                <label for="event_name" class="form-label">Event Name</label>
                <input 
                    type="text" 
                    id="event_name" 
                    name="event_name" 
                    class="form-control"
                    placeholder="Enter event name" 
                    aria-label="Event Name"
                    required>
            </div>

            <!-- Event Date -->
            <div class="mb-3">
                <label for="date_of_activity" class="form-label">Event Date</label>
                <input 
                    type="date" 
                    id="date_of_activity" 
                    name="date_of_activity" 
                    class="form-control"
                    aria-label="Event Date"
                    required>
            </div>

            <!-- Activity Address -->
            <div class="mb-3">
                <label for="activity_address" class="form-label">Activity Address</label>
                <input 
                    type="text" 
                    id="activity_address" 
                    name="activity_address" 
                    class="form-control"
                    placeholder="Enter the activity address" 
                    aria-label="Activity Address"
                    required>
            </div>

            <!-- Event Description -->
            <div class="mb-3">
                <label for="event_description" class="form-label">Event Description</label>
                <textarea 
                    id="event_description" 
                    name="event_description" 
                    rows="4" 
                    class="form-control"
                    placeholder="Provide a detailed description of the event" 
                    aria-label="Event Description"></textarea>
            </div>

            <!-- Date Created -->
            <div class="mb-3">
                <label for="date_created" class="form-label">Date Created</label>
                <input 
                    type="date" 
                    id="date_created" 
                    name="date_created" 
                    class="form-control"
                    value="<%= new Date().toISOString().split('T')[0] %>" 
                    aria-label="Date Created"
                    required>
            </div>

            <!-- Privacy -->
            <fieldset class="mb-3">
                <legend class="form-label">Privacy</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="privacy" value="Public" id="privacyPublic" checked>
                    <label class="form-check-label" for="privacyPublic">
                        Public
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="privacy" value="Private" id="privacyPrivate">
                    <label class="form-check-label" for="privacyPrivate">
                        Private
                    </label>
                </div>
            </fieldset>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100">Submit Event</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
