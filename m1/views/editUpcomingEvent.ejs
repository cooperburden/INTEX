<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Upcoming Event</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h1>Edit Upcoming Event</h1>
        <form action="/editUpcomingEvent/<%= event.event_id %>" method="POST">
            <!-- Event Name -->
            <div class="mb-3">
                <label for="eventName" class="form-label">Event Name</label>
                <input type="text" class="form-control" id="eventName" name="event_name" value="<%= event.event_name %>" required>
            </div>

            <!-- Date of Event -->
            <div class="mb-3">
                <label for="dateOfEvent" class="form-label">Date of Event</label>
                <input type="date" class="form-control" id="dateOfEvent" name="date_of_event" value="<%= event.date_of_event %>" required>
            </div>

            <!-- Time of Activity -->
            <div class="mb-3">
                <label for="timeOfActivity" class="form-label">Time of Activity</label>
                <input type="time" class="form-control" id="timeOfActivity" name="time_of_activity" value="<%= event.time_of_activity %>" required>
            </div>

            <!-- Event Address -->
            <div class="mb-3">
                <label for="eventAddress" class="form-label">Event Address</label>
                <input type="text" class="form-control" id="eventAddress" name="event_address" value="<%= event.event_address %>" required>
            </div>

            <!-- Event City -->
            <div class="mb-3">
                <label for="eventCity" class="form-label">City</label>
                <input type="text" class="form-control" id="eventCity" name="event_city" value="<%= event.event_city %>" required>
            </div>

            <!-- Event State -->
            <div class="mb-3">
                <label for="eventState" class="form-label">State</label>
                <input type="text" class="form-control" id="eventState" name="event_state" value="<%= event.event_state %>" required>
            </div>

            <!-- Event Zip -->
            <div class="mb-3">
                <label for="eventZip" class="form-label">Zip Code</label>
                <input type="text" class="form-control" id="eventZip" name="event_zip" value="<%= event.event_zip %>" required>
            </div>

            <!-- Actual Attendance -->
            <div class="mb-3">
                <label for="actualAttendance" class="form-label">Actual Attendance</label>
                <input type="number" class="form-control" id="actualAttendance" name="actual_attendance" value="<%= event.actual_attendance || '' %>">
            </div>

            <!-- Actual Event Duration -->
            <div class="mb-3">
                <label for="actualEventDuration" class="form-label">Actual Event Duration (hours)</label>
                <input type="number" class="form-control" id="actualEventDuration" name="actual_event_duration" value="<%= event.actual_event_duration || '' %>" placeholder="Enter duration in hours">
            </div>

            <!-- Completed -->
            <div class="mb-3">
                <label for="completed" class="form-label">Completed</label>
                <select class="form-control" id="completed" name="completed" required>
                    <option value="no" <%= !event.completed ? 'selected' : '' %>>No</option>
                    <option value="yes" <%= event.completed ? 'selected' : '' %>>Yes</option>
                </select>
            </div>

            <!-- Approved -->
            <div class="mb-3">
                <label for="approved" class="form-label">Approved</label>
                <select class="form-control" id="approved" name="approved" required>
                    <option value="no" <%= !event.approved ? 'selected' : '' %>>No</option>
                    <option value="yes" <%= event.approved ? 'selected' : '' %>>Yes</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

